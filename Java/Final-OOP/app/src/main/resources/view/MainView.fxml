<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.MainController">
    
    <top>
        <Label text="Habit Tracker" style="-fx-font-size: 24px; -fx-font-weight: bold;" BorderPane.alignment="CENTER">
            <padding><Insets top="10" bottom="10"/></padding>
        </Label>
    </top>

    <center>
        <SplitPane fx:id="mainSplitPane" dividerPositions="0.5">
            <items>
                <TableView fx:id="habitTable">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="nameColumn" text="Tên Thói Quen" prefWidth="150"/>
                        <TableColumn fx:id="descColumn" text="Mục Tiêu" prefWidth="150"/> <TableColumn fx:id="dateColumn" text="Ngày Bắt Đầu" prefWidth="100"/>
                        <TableColumn fx:id="streakColumn" text="Streak" prefWidth="80"/>
                    </columns>
                    
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <StackPane fx:id="rightPane">
                    
                    <Label fx:id="placeholderLabel" text="Chọn thói quen để xem biểu đồ" 
                           style="-fx-font-size: 16px; -fx-text-fill: gray;" 
                           wrapText="true" textAlignment="CENTER" alignment="CENTER"/>

                    <TabPane fx:id="chartContainer" visible="false" tabClosingPolicy="UNAVAILABLE">
                        
                        <Tab text="Tổng quan">
                            <VBox alignment="TOP_CENTER" spacing="20">
                                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                                <Label text="Tỷ lệ hoàn thành" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                <PieChart fx:id="pieChart" labelsVisible="true"/>
                                <Label fx:id="lblAnalysis" text="..." wrapText="true" textAlignment="CENTER"/>
                            </VBox>
                        </Tab>

                        <Tab text="Theo tháng">
                            <VBox alignment="TOP_CENTER" spacing="20">
                                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                                <Label text="Số lần thực hiện năm nay" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                
                                <BarChart fx:id="barChart">
                                    <xAxis>
                                        <CategoryAxis label="Tháng" fx:id="xAxis"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="Số ngày" fx:id="yAxis"/>
                                    </yAxis>
                                </BarChart>
                            </VBox>
                        </Tab>

                    </TabPane>

                </StackPane>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ToggleButton fx:id="btnToggleStats" text="Hiện Thống Kê" onAction="#handleToggleStats"/>
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                <TextField fx:id="nameInput" promptText="Tên thói quen mới..." prefWidth="200"/>
                <TextField fx:id="descInput" promptText="Mục tiêu..." prefWidth="200"/>
                <Button text="Thêm" onAction="#handleAddHabit"/>
                <Button text="Xóa" onAction="#handleDeleteHabit"/>
                <Button text="Check-in Hôm nay" onAction="#handleCheckIn" style="-fx-background-color: lightgreen;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>